@model ShopCartModel
@{
	ViewData["Title"] = "Cart Page";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Shop Cart</h1>
                </div>
            </div>
            <div class="col-lg-7">
            </div>
        </div>
    </div> 
</div>
<!-- End Hero Section -->
    @if (Model.ShopCart != null && Model.ShopCart.ShopCartItems != null && Model.ShopCart.ShopCartItems.Count() > 0)
    {
        <div class="untree_co-section before-footer-section">
            <div class="container">
                <div class="row mb-5">
                    <form class="col-md-12" method="post">
                        <div class="site-blocks-table">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th class="product-thumbnail">Image</th>
                                        <th class="product-name">Product</th>
                                        <th class="product-price">Price</th>
                                        <th class="product-quantity">Quantity</th>
                                        <th class="product-total">Total</th>
                                        <th class="product-remove">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @await Html.PartialAsync("_CartItemPartial", Model)
                            
                                </tbody>
                            </table>
                        </div>
                    </form>
                </div>

                <div class="col-md-12 pl-12">
                    <div class="row justify-content-end">
                        <div class="col-md-4">
                            <div class="row">
                                <div class="col-md-12 text-right border-bottom mb-5">
                                    <h3 class="text-black h4 text-uppercase">Cart Totals</h3>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black"></span>
                                </div>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black">SubTotal</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.SubTotal</strong>
                                </div>
                            </div>
                             <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black">ShipCost</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.ShipCost</strong>
                                </div>
                            </div>
                             <div class="row mb-3">
                                <div class="col-md-6">
                                    <span class="text-black">Tax</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.Tax</strong>
                                </div>
                            </div>
                            <div class="row mb-5">
                                <div class="col-md-6">
                                    <span class="text-black">Total</span>
                                </div>
                                <div class="col-md-6 text-right">
                                    <strong class="text-black">@Model.NetTotal</strong>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <button class="btn btn-black btn-lg py-3 btn-block"><a href="ShopCart/ProceedToCheckout?catId=@Model.ShopCart.Id" style="color:#ffffff; text-decoration: none;!Importent" >Proceed To Checkout</a></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </diV>

    }else
    {
        <div class="row">
            <div class="col-lg-5">
                <h1>No Item Found</h1>
            </div>
        </div>
    }
